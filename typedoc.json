{
    "$schema": "https://typedoc.org/schema.json",
    "entryPoints": [
        "src/main/index.ts"
    ],
    "basePath": "src/main",
    "entryPointStrategy": "resolve",
    "out": "lib/apidoc",
    "excludePrivate": true,
    "excludeExternals": true,
    "treatWarningsAsErrors": true,
    "plugin": [
        "typedoc-github-theme"
    ],    
    "validation": true,
    "gitRevision": "main"
}
